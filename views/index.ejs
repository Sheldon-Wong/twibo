<%- include header %>

<div class="container">
  <div class="container-fluid">
    <div class="row-fluid">
      <% if (user) { %>
      <!--用户信息栏-->
      <div class="user-info span3">
        <div class="avatar">
          <img src="<%= user.head %>" class="img-circle">
        </div>
        <div class="info-box">
          <div class="name-box">
            <a href="/u/<%= user.name %>"><%= user.name %></a>
          </div>
        </div>
        <ul class="user-detail">
          <li>
            <a href="/u/<%= user.name %>/follow">
              <strong>314</strong>
              <span>关注</span>
            </a>
          </li>
          <li>
            <a href="/u/<%= user.name %>/fans">
              <strong>860</strong>
              <span>粉丝</span>
            </a>
          </li>
          <li>
            <a href="/u/<%= user.name %>">
              <strong>0</strong>
              <span>Twibo</span>
            </a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <% } else { %>

      <% } %>
      <!--微博栏-->
      <div class="span9 all-twibo">
        <div class="new-post">
        <% if (user) { %>
          <form method="post" action="/post">
            <textarea name="post"></textarea><br />
            <input type="submit" value="发表" />
          </form>
        <% } else { %>

        <% } %>
        </div>
        <div>

        </div>
        <% posts.forEach(function (post, index) { %>
          <p class="info">
            作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
            日期：<%= post.time.minute %>
          </p>
          <p><%- post.post %></p>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include footer %>