<%- include header %>
<div class="container">
  <!--用户信息栏-->
  <div class="user-info span3">
    <div class="avatar">
      <img src="<%= user.head %>" class="img-circle">
    </div>
    <div class="info-box">
      <div class="name-box">
        <a href="/u/<%= user.name %>"><%= user.name %></a>
      </div>
    </div>
    <ul class="user-detail">
      <li>
        <a href="/u/<%= user.name %>/follow">
          <strong><%= user.follow.length-1 %></strong>
          <span>关注</span>
        </a>
      </li>
      <li>
        <a href="/u/<%= user.name %>/fans">
          <strong><%= user.fans.length %></strong>
          <span>粉丝</span>
        </a>
      </li>
      <li>
        <a href="/u/<%= user.name %>">
          <strong><%= posts.length %></strong>
          <span>Twibo</span>
        </a>
      </li>
    </ul>
    <div class="clearfix"></div>
  </div>
  <% posts.forEach(function (post, index) { %>
    <p class="info">
      作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
      日期：<%= post.time.minute %>
    </p>
    <p><%- post.post %></p>
  <% }) %>
</div>
<%- include footer %>